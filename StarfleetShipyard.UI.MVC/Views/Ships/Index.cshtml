@model IEnumerable<StarfleetShipyard.DATA.EF.Models.Ship>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShipName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitsInStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitsOnOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipClasses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipTypes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShipName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitsInStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitsOnOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipClasses.ShipClassesName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipStatus.ShipStatusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipTypes.ShipTypesName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.Planet)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShipId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ShipId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ShipId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
